<!DOCTYPE html>
<html lang="en">
<head>
    <title>MY Todo</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
    <h1>
        Tasks
    </h1>
    </div>

    <div class="box">
        <%newItems.forEach(function(item){ %>
    <form class="item"  action="/delete"  method="post">
        <div class="item">
            <input type="checkbox" onchange="this.form.submit()" name="checked" value=<%= item._id%>> 
            <p>
                <%=  item.toWatch %>
            </p>
        </div>
    </form>
    <%})%>
        
    <form class="item" action="/" method="post">
        <input type="text" name="newInput" placeholder="Add task" autocomplete="off" required>
        <button type="submit" name="add">+</button>
    </form>
    </div>

</body>
</html>